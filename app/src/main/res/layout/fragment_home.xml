<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <Button
        android:id="@+id/button_persion"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="323dp"
        android:layout_height="114dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="44dp"
        android:text="@string/members"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:icon="@drawable/ic_baseline_groups_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_details"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:text="@string/chiti_detais"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:icon="@drawable/ic_baseline_app_registration_24"
        app:layout_constraintEnd_toEndOf="@+id/button_persion"
        app:layout_constraintStart_toStartOf="@+id/button_persion"
        app:layout_constraintTop_toBottomOf="@+id/button_persion" />

    <Button
        android:id="@+id/button_about"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/about"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:icon="@drawable/ic_baseline_info_24"
        app:layout_constraintEnd_toEndOf="@+id/button_details"
        app:layout_constraintStart_toStartOf="@+id/button_details"
        app:layout_constraintTop_toBottomOf="@+id/button_details"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>